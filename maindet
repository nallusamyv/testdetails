import wordninja

text = "sublineofbusiness"
split_words = wordninja.split(text)

print(" ".join(split_words))

nltk.download('words')
word_list = set(words.words())

def split_with_recursion(text, word_list):
    if not text:
        return []
    for i in range(1, len(text) + 1):
        prefix = text[:i]
        if prefix in word_list:
            return [prefix] + split_with_recursion(text[i:], word_list)
    return [text]  # Return the full text if no match is found

text = "sublineofbusiness"
split_words = split_with_recursion(text.lower(), word_list)
print(" ".join(split_words))
